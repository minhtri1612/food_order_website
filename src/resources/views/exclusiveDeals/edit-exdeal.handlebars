<div class="mt-4 container">
    <h3>Edit</h3>
    <form method="POST" action="/exclusiveDeals/{{exclusiveDeals.id}}?_method=PUT">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" value="{{exclusiveDeals.name}}" id="name" name="name"  required>
        </div>
       
       <div class="mb-3">
            <label for="discount" class="form-label">Discount</label>
            <textarea  class="form-control"  id="discount" name="discount" required>{{exclusiveDeals.discount}}</textarea>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Image address</label>
            <input type="text" class="form-control" value="{{exclusiveDeals.image}}" id="image" name="image"  required>
        </div>

    
        <button type="submit" class="btn btn-primary">Save</button>
</form>

</div>